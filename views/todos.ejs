<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Merriweather+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>KanPlan</title>
</head>
<body>
    <div class="background-container">
        <header class="header">
            <nav role="navigation" class="navbar">
                <h1>KanPlan Board</h1> 
                <ul class="nav-menu">
                    <li class="nav-item">
                        <a href="#" id="settings-link">Settings</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" id="change-background">Change Background</a>
                    </li>
                    <li class="nav-item">
                        <a href="#">Share Board</a>
                    </li>
                    <li class="nav-item">
                        <a href="/logout">Logout</a>
                    </li>
                </ul>
                <div class="hamburger">
                    <span class="bar"></span>
                    <span class="bar"></span>
                    <span class="bar"></span>
                </div>
            </nav>
        </header>
            
        
        
        <div class="kanplan-board">
            <div class="kanplan-column-todo column">
                    <h2 class="kanplan-column-title">ToDo</h2>
                <div class="kanplan-column-tasks">
                    <% todos.forEach(el => {
                        if(el.status === 'todo') { %>
                            <li class="todoItem li-todo" data-id="<%= el._id %>">
                                <div class="cover-container"></div>
                                <span class="todo"><%= el.title %></span>
                                <p class="todo-content"><%= el.content %></p>
                                <div class="icon-container">
                                    <i class="fa-solid fa-pen-to-square" id="edit-button"></i>
                                    <i class="fa-solid fa-delete-left" id="del"></i>
                                </div>
                            </li>

                            <div id="modal" class="modal">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3>Click To Edit Content</h3>
                                        <button class="close-button">&times;</button>
                                    </div>
                                    <div class="modal-inputs">
                                        <input type="text" id="edit-title" />
                                        <textarea id="edit-content"></textarea>
                                        <button id="save-button">Save Changes</button>
                                    </div>
                                    <div class="modal-cover-photo">
                                        <a href="#" id="change-cover">Add a cover photo</a>
                                    </div>
                                </div>
                            </div>
                        <% }
                    }); %>
                </div>
                <div class="divForForm">
                <form class="toDoForm" action="/todo/createTodo" method="POST">
                        <input type="text" placeholder="Enter Todo Title" name="todoTitle">
                        <input type="text" placeholder="Enter Todo Content" name="todoItem">
                        <input type="submit" value="Add Item" class="submit">
                    </form>
                </div>
                <div class="display-form">
                <button class="display-form-button">Click to add a Todo</button>
            </div>
            
            <div id="col-settings-todo" class="col-modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Click to change the column's colour</h3>
                        <button class="close-button">&times;</button>
                    </div>
                    <div class="colour-picker">
                        <div class="colour-picker-box">
                            <span>Earthy Red</span>
                        </div>
                        <div class="colour-picker-box">
                            <span>Sage Green</span>
                        </div>
                        <div class="colour-picker-box">
                            <span>Navy Blue</span>
                        </div>
                        <div class="colour-picker-box">
                            <span>Orange</span>
                        </div>
                        <div class="colour-picker-box">
                            <span>Gray</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        



            <div class="kanplan-column-doing column">
                <h2 class="kanplan-column-title">Doing</h2>
                <div class="kanplan-column-tasks">
                    <% todos.forEach(el => {
                        if(el.status === 'doing') { %>
                            <li class="todoItem li-todo" data-id="<%= el._id %>">
                                <div class="cover-container"></div>
                                <span class="doing"><%= el.title %></span>
                                <p class="todo-content"><%= el.content %></p>
                                <div class="icon-container">
                                    <i class="fa-solid fa-pen-to-square" id="edit-button"></i>
                                    <i class="fa-solid fa-delete-left" id="del"></i>
                                </div>
                            </li>

                            <div id="modal" class="modal">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3>Click To Edit Content</h3>
                                        <button class="close-button">&times;</button>
                                    </div>
                                    <div class="modal-inputs">
                                        <input type="text" id="edit-title" />
                                        <textarea id="edit-content"></textarea>
                                        <button id="save-button">Save Changes</button>
                                    </div>
                                    <div class="modal-cover-photo">
                                        <a href="#" id="change-cover">Add a cover photo</a>
                                    </div>
                                </div>
                            </div>
                        <% }
                    }); %>
                </div>
                
            <div id="col-settings-doing" class="col-modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Click to change the column's colour</h3>
                        <button class="close-button">&times;</button>
                    </div>
                    <div class="colour-picker">
                        <div class="colour-picker-box">Earthy Red</div>
                        <div class="colour-picker-box">Sage Green</div>
                        <div class="colour-picker-box">Navy Blue</div>
                        <div class="colour-picker-box">Orange</div>
                        <div class="colour-picker-box">Gray</div>
                    </div>
                </div>
            </div>
        </div>
            
            <div class="kanplan-column-done column">
                <h2 class="kanplan-column-title">Done</h2>
                <div class="kanplan-column-tasks">
                    <% todos.forEach(el => {
                        if(el.status === 'done') { %>
                            <li class="todoItem li-todo" data-id="<%= el._id %>">
                                <div class="cover-container"></div>
                                <span class="done"><%= el.title %></span>
                                <p class="todo-content"><%= el.content %></p>
                                <div class="icon-container">
                                    <i class="fa-solid fa-pen-to-square" id="edit-button"></i>
                                    <i class="fa-solid fa-delete-left" id="del"></i>
                                </div>
                            </li>

                            <div id="modal" class="modal">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h3>Click To Edit Content</h3>
                                        <button class="close-button">&times;</button>
                                    </div>
                                    <div class="modal-inputs">
                                        <input type="text" id="edit-title" />
                                        <textarea id="edit-content"></textarea>
                                        <button id="save-button">Save Changes</button>
                                    </div>
                                    <div class="modal-cover-photo">
                                        <a href="#" id="change-cover">Add a cover photo</a>
                                    </div>
                                </div>
                            </div>
    
                    <% }
                    }); %>
                </div>
                <div id="col-settings-done" class="col-modal">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Click to change the column's colour</h3>
                        <button class="close-button">&times;</button>
                    </div>
                    <div class="colour-picker">
                        <div class="colour-picker-box">Earthy Red</div>
                        <div class="colour-picker-box">Sage Green</div>
                        <div class="colour-picker-box">Navy Blue</div>
                        <div class="colour-picker-box">Orange</div>
                        <div class="colour-picker-box">Gray</div>
                    </div>
                </div>
            </div>
        </div>        
        </div>
    </div>
    <script src="js/main.js"></script>
</body>
</html>